FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "mu.*|alpha.*"
    {
        solver          PCG;
        preconditioner  FDIC;
        tolerance       1e-12;
        relTol          0;
    }
}

PIMPLE
{
    nNonOrthogonalCorrectors 0;
    nOuterCorrectors 100;
    outerCorrectorResidualControl
    {
        alpha
        {
            tolerance 1e-5;
            relTol    0;
        }

        mu
        {
            tolerance 1e-5;
            relTol    0;
        }

    }
}

relaxationFactors
{
    equations
    {
       alpha    0.5;
       mu       0.5;
    }

    fields
    {
        ".*"   1;
    }

}

