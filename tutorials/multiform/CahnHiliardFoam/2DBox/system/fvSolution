FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "mu.*|alpha.*"
    {
        solver          PCG;
        preconditioner  FDIC;
        tolerance       1e-12;
        relTol          1e-6;
    }
}

PIMPLE
{
    debugCH false;
    lambdaMu 1;
    lambdaAlpha 1;
    muRelax 0.7;
    alphaRelax 0.7;
    nNonOrthogonalCorrectors 5;
    nOuterCorrectors 200;
    
    outerCorrectorResidualControl
    {
        alpha
        {
            tolerance 1e-5;
            relTol    1e-4;
        }

        mu
        {
            tolerance 1e-5;
            relTol    1e-4;
        }

    }
}

relaxationFactors
{
    equations
    {
       alpha    1;
       mu       1;
    }

    fields
    {
        alpha   1;
        mu      1;
    }

}

