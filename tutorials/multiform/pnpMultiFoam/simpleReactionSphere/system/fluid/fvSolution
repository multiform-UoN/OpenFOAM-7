solvers
{
    V
    {
        solver          PBiCGStab;
        preconditioner  DIC;
        smoother  FDIC;
        tolerance       1e-12;
        relTol          1e-2;
    }

    VFinal
    {
        $V;
        //relTol          0;
    }

    "C.*"
    {
        solver          PBiCGStab;
        preconditioner  DILU;//diagonal;
        smoother         DILU;
        tolerance       1e-12;
        relTol          1e-2;
    }
}

couplingControls
{
    nCorrectors    3;
    nNonOrthogonalCorrectors 0;
    //VRefCell        0;
    //VRefValue       0;

    residualControl
    {
        ".*"            1e-9;
    }
}


