FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      setRandomFieldDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

field source;
type gaussian;
correlation exponential;
Lcorr           (0.05 10 0.05);
Kmean           0;
Ksigma          10000;
periodic true;
nterms 20;
nfreq 50;
printStats true;
twoDimensional true;
values (1e-10 1e-9  1e-8  1e-7);
thresholds (0);
thresholds2 (0.2);
