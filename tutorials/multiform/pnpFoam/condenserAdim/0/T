FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      C.anions;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [ 0 0 0 0 0 0 0 ];

internalField   uniform 1;

boundaryField
{
    anode //"anode|cathode"
    {
        type            RobinPhi;//codedFlux;
        phiName         "phiNP";
        RobinK          uniform -2;
        RobinF          uniform 0;
        RobinD          uniform 1;
        value           uniform 0;
    }
    cathode //"anode|cathode"
    {
        type            fixedValue;//codedFlux;
        RobinK          uniform 1;
        RobinF          uniform 0;
        RobinD          uniform 1;
        value           uniform 0.5;
        fluxICoeffs     uniform 0;
        fluxBCoeffs     uniform 0;
        snGrad          uniform 0;

        name    heavisideFlux;

        code
        #{
            this->fluxBoundaryCoeffs() =
                pos
                (
                    scalar(0.05)
                    -
                    (
                        this->db().time().value()
                        - this->db().time().deltaT().value()                        
                    )
                );
            this->fluxInternalCoeffs() = Zero;
            this->snGradRef() = Zero;
            operator==(1.0);
        #};

        // codeInclude
        //#{
        //    #include "fvCFD.H"
        //#};

        // codeOptions
        //#{
        //    -I$(LIB_SRC)/finiteVolume/lnInclude
        //#};
    }
    }

    fixedWalls
    {
        type            empty;
        value           $internalField;
    }

    frontAndBack
    {
        type            empty;
    }
}

// ************************************************************************* //
