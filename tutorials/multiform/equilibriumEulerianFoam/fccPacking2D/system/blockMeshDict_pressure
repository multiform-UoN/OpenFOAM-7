(
    maxY
    {
        type symmetryPlane;
        faces
        (
            (3 7 6 2)
        );
    }

    minX
    {
        type patch;
        faces
        (
            (0 4 7 3)
        );
    }

    maxX
    {
        type patch;
        faces
        (
            (2 6 5 1)
        );
    }

    minY
    {
        type symmetryPlane;
        faces
	(
            (1 5 4 0)
        );
    }

    minZ
    {
        type        symmetryPlane;
        faces
        (
            (0 3 2 1)
        );
    }

    maxZ
    {
        type symmetryPlane;
        faces
        (
            (4 5 6 7)
        );
    }
);

mergePatchPairs
(
);

