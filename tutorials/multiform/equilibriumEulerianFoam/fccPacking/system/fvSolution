FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    c
    {
        solver          GAMG;
        smoother        DILU;
        tolerance       1e-10;
        relTol          0.01;
    }

    cFinal
    {
        $c;
        relTol 1e-4;
    }

    p
    {
        solver          GAMG;
        smoother        DIC;
        tolerance       1e-10;
        relTol          0.1;
    }

    "(U|sigma)"
    {
        solver          GAMG;
        smoother        symGaussSeidel;
        tolerance       1e-10;
        relTol          0.1;
    }

    pFinal
    {
        $p;
        relTol          1e-4;
    }

    "(U|sigma)Final"
    {
        $U;
        relTol          1e-4;
    }
}

PIMPLE
{
    momentumPredictor   off;
    nOuterCorrectors    1;
    nCorrectors         2;
    nNonOrthogonalCorrectors 0;
    pRefCell            0;
    pRefValue           0;
    turbOnFinalIterOnly no;
    residualControl
    {
        ".*"           1e-5;
    }
}

relaxationFactors
{
    equations
    {
        ".*"   0.95;
    }
}

