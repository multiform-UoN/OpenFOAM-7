FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

scalegrid 1;
x1 0.000000;
y1 0.000000;
z1 0.000000;
x2 1.000000;
y2 1.000000;
z2 1.000000;
xgrid 1000;
ygrid 100;
zgrid 100;

convertToMeters $scalegrid;

vertices
(
    ($x1 $y1 -0.01)
    ($x2 $y1 -0.01)
    ($x2 $y2 -0.01)
    ($x1 $y2 -0.01)
    ($x1 $y1 0.01)
    ($x2 $y1 0.01)
    ($x2 $y2 0.01)
    ($x1 $y2 0.01)
);

blocks
(
    hex (0 1 2 3 4 5 6 7) (100 100 1) simpleGrading (1 1 1)
);

edges
(
);

boundary
(
  up
  {
      type patch;
      faces
      (
          (3 7 6 2)
      );
  }

  down
  {
      type patch;
      faces
      (
          (1 5 4 0)
      );
  }

    inlet
    {
        type patch;
        faces
        (
            (0 4 7 3)
        );
    }

    outlet
    {
        type patch;
        faces
        (
            (2 6 5 1)
        );
    }


    frontAndBack
    {
        type        empty;
        faces
        (
            (0 3 2 1)
            (4 5 6 7)
        );
    }


);

mergePatchPairs
(
);

